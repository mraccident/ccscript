#
# Note that ccscript requires certain C++0x features. This means you should
# build with at least g++ 4.5 or MSVC 2010 or later.
#

# External libraries
lib gtest ;
lib pthread ;

# Executable targets
exe ccc : src/main.cpp gtest pthread ;

# Just for convenience, put last built binary in top-level of bin/
install bin : ccc ;

# Installation target
install install : ccc :
    <target-os>windows:<location>"C:/Program Files/CCScript/bin"
    <target-os>linux:<location>/usr/local/bin
    ;

# Only install when specifically requested
explicit install ;
